<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/bg_item_volunteer">

    <ImageView
        android:id="@+id/service_loading_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/loading_grey"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/service_loading_image"
        android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/service_loading_title"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:background="@color/loading_grey"
            android:layout_margin="1dp"/>
        <TextView
            android:id="@+id/service_loading_organization_service_category"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:background="@color/loading_grey"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/service_loading_notice_date"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:background="@color/loading_grey"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/service_loading_act_date"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:background="@color/loading_grey"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/service_loading_location"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:background="@color/loading_grey"
            android:layout_margin="1dp"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
